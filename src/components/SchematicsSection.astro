---
import type { Lang, SchemaItem } from "../data/siteContent";
import SectionShell from "./SectionShell.astro";

interface Props {
  lang: Lang;
  title: string;
  subtitle: string;
  items: SchemaItem[];
}

const { lang, title, subtitle, items } = Astro.props;
const t = <T extends Record<Lang, string>>(entry: T) => entry[lang];
---

<SectionShell id="esquemas" title={title} subtitle={subtitle}>
  <div class="grid grid-two">
    {items.map((item) => (
      <article class="card">
        <img src={item.image} alt={t(item.title)} loading="lazy" />
        <div class="card-body">
          <h3>{t(item.title)}</h3>
          <p>{t(item.description)}</p>
        </div>
      </article>
    ))}
  </div>
</SectionShell>
