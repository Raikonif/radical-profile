---
import type { Lang } from "../data/siteContent";

interface Props {
  lang: Lang;
  siteTitle: string;
  languageLabel: string;
  themeLabel: string;
  lightLabel: string;
  darkLabel: string;
  sections: {
    inicio: string;
    casos: string;
    esquemas: string;
    divulgacion: string;
    podcasts: string;
    videos: string;
    contacto: string;
  };
}

const { lang, siteTitle, languageLabel, themeLabel, lightLabel, darkLabel, sections } = Astro.props;
---

<header class="header">
  <div class="container header-inner">
    <div class="brand">{siteTitle}</div>
    <nav>
      <ul>
        <li><a href="#inicio">{sections.inicio}</a></li>
        <li><a href="#casos">{sections.casos}</a></li>
        <li><a href="#esquemas">{sections.esquemas}</a></li>
        <li><a href="#divulgacion">{sections.divulgacion}</a></li>
        <li><a href="#podcasts">{sections.podcasts}</a></li>
        <li><a href="#videos">{sections.videos}</a></li>
        <li><a href="#contacto">{sections.contacto}</a></li>
      </ul>
    </nav>
    <div class="controls">
      <span class="pill">{languageLabel}</span>
      <a class={`pill ${lang === "es" ? "is-active" : ""}`} href="/?lang=es">ES</a>
      <a class={`pill ${lang === "en" ? "is-active" : ""}`} href="/?lang=en">EN</a>
      <button
        id="theme-toggle"
        class="pill"
        type="button"
        data-light={lightLabel}
        data-dark={darkLabel}
        aria-label={themeLabel}
      >
        {themeLabel}
      </button>
    </div>
  </div>
</header>
